root = true

[*]
indent_style = tab
tab_width = 4
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.yml]
indent_size = 2
indent_style = space

[*.js]
indent_size = 2
indent_style = space

[*.ps1]
end_of_line = crlf
indent_size = 4
indent_style = tab

[*.xml]
end_of_line = lf
indent_size = 4
indent_style = tab
